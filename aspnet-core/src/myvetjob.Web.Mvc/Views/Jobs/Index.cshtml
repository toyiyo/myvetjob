@using myvetjob.Web.Startup

@{
    ViewBag.Title = L("Jobs");
    ViewBag.CurrentPageName = PageNames.Jobs;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="container text-center py-5">
                <h2 class="display-4 font-weight-bold text-dark">
                    <span class="d-block">Job Board</span>
                    <span class="text-info"> for proud veterans looking to transition </span>
                </h2>
                <p class="lead text-muted mt-3">
                    A job board where companies provide opportunities to our Veteran Heroes
                </p>
                <div class="mt-4">
                    <a href="/post-a-job" class="btn btn-dark mr-3">Post a job</a>
                    <a href="#browse" class="btn btn-outline-dark">Browse jobs</a>
                </div>
                <div class="container text-center py-5">
                    <h5 class="text-muted small">trusted by members of our military</h5>
                    <div class="d-flex align-items-center justify-content-center flex-wrap">
                        <img class="img-fluid rounded" src="~/img/Design.png" height="30" alt="Icon 1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        Hello from the Jobs page
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>