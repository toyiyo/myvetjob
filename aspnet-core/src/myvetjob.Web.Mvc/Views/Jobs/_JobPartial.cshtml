@using System.Globalization
@using myvetjob.Jobs
@model JobDto

<div class="card shadow">
    <div class="card-body d-flex p-4 bg-light">
        <div>
            <img class="img-fluid" style="width: 100px; height: 100px;" alt="" src="~/img/logo.png">
        </div>
        <div>
            <h4 class="h5">
                <div class="text-dark">
                    <a rel="noopener noreferrer" class="font-weight-bold " id="@Model.Id" href="/jobs/@Model.Id">@Model.Position</a>
                </div>
            </h4>
            <div class="text-muted">@Model.CompanyName</div>
            <div class="d-flex flex-wrap pt-2 text-muted small">
                <span class="p-1 mr-4"><i class="fas fa-map-marked-alt"></i>  @Model.JobLocation</span>
                <span class="p-1 mr-4"><i class="fas fa-money-bill-wave"></i>  @Model.MinSalary.ToString("C", CultureInfo.CreateSpecificCulture("en-US")) - @Model.MaxSalary.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</span>
                <span class="p-1 mr-4"><i class="fas fa-stopwatch"></i>  Apply by @Model.ExpireDate.ToString("MMM dd yyyy")</span>
                <span class="p-1 mr-4 text-sm leading-4"><i class="fas fa-funnel-dollar"></i>  @Model.EmploymentType.ToString() </span>
            </div>
        </div>
        <div class="ml-auto align-self-end">
            <a href="@Model.ApplyUrl" target="_blank" class="btn btn-primary">
                Apply <i class="fas fa-external-link-alt"></i>
            </a>
        </div>
    </div>
</div>